pipeline {
    agent {
        label 'Agent-1'
    }

    stages {
        stage('Build') {
            steps {
                sh 'echo This is build'
            }
        }

        stage('Test') {
            steps {
                sh 'echo This is test'
            }
        }
        stage('Deploy'){
            steps {
                sh 'echo This is deploy'
            }
        }

    }

post {
    always{
        echo "This section runs always"
        deleteDir()
    }

    success{
        echo "This section runs when pipeline is success"
    }
    failure {
        echo "runs when pipeline is failure"
    }
}

}